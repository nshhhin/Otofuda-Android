<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackDark">

    <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:onClick="onStartButtonTapped"
            android:text="スタート"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_conversion_absoluteHeight="86dp"
            tools:layout_conversion_absoluteWidth="311dp" />

    <ScrollView
            android:layout_width="409dp"
            android:layout_height="573dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">


                <View
                        android:id="@+id/view1"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/textView2"
                        android:layout_width="394dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="使用する音楽"
                        android:textColor="#FFFFFF" />

                <com.marozzi.segmentedtab.SegmentedGroup
                        android:id="@+id/group_one"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10px"
                        android:layout_weight="0"
                        app:sg_background_color="#ffffff"
                        app:sg_background_color_selected="@color/colorPrimary"
                        app:sg_corner_color="#ffffff"
                        app:sg_corner_color_selected="#ffffff"
                        app:sg_corner_radius="10px"
                        app:sg_corner_size="5px"
                        app:sg_text_color="#000000"
                        app:sg_text_color_selected="#000000">

                    <com.marozzi.segmentedtab.SegmentedTab
                            android:id="@+id/element_one_one"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="プリセット" />

                    <com.marozzi.segmentedtab.SegmentedTab
                            android:id="@+id/element_one_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="デバイス内" />

                </com.marozzi.segmentedtab.SegmentedGroup>
                <View
                        android:id="@+id/view3"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"/>

                <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">


                <View
                        android:id="@+id/view2"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="394dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="再生する区間"
                        android:textColor="#FFFFFF" />

                <com.marozzi.segmentedtab.SegmentedGroup
                        android:id="@+id/group_one2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10px"
                        android:layout_weight="0"
                        app:sg_background_color="#ffffff"
                        app:sg_background_color_selected="@color/colorPrimary"
                        app:sg_corner_color="#ffffff"
                        app:sg_corner_color_selected="#ffffff"
                        app:sg_corner_radius="10px"
                        app:sg_corner_size="5px"
                        app:sg_text_color="#000000"
                        app:sg_text_color_selected="#000000">

                    <com.marozzi.segmentedtab.SegmentedTab
                            android:id="@+id/element_one_one_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="イントロ" />

                    <com.marozzi.segmentedtab.SegmentedTab
                            android:id="@+id/element_one_two_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="ランダム" />

                </com.marozzi.segmentedtab.SegmentedGroup>

                <View
                        android:id="@+id/view4"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">


                <View
                        android:id="@+id/view5"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="394dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="採点ルール"
                        android:textColor="#FFFFFF" />

                <com.marozzi.segmentedtab.SegmentedGroup
                        android:id="@+id/group_one_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10px"
                        android:layout_weight="0"
                        app:sg_background_color="#ffffff"
                        app:sg_background_color_selected="@color/colorPrimary"
                        app:sg_corner_color="#ffffff"
                        app:sg_corner_color_selected="#ffffff"
                        app:sg_corner_radius="10px"
                        app:sg_corner_size="5px"
                        app:sg_text_color="#000000"
                        app:sg_text_color_selected="#000000">

                    <com.marozzi.segmentedtab.SegmentedTab
                            android:id="@+id/element_one_one_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="ノーマル" />

                    <com.marozzi.segmentedtab.SegmentedTab
                            android:id="@+id/element_one_two_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="ビンゴ" />

                </com.marozzi.segmentedtab.SegmentedGroup>

                <View
                        android:id="@+id/view6"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>